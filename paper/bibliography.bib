issn = {1471-2148},
journal = {BMC evolutionary biology},
keywords = {Amino Acid Sequence,Animals,Chordata,Chordata: genetics,Chordata: metabolism,Databases, Genetic,Evolution, Molecular,Genetic Drift,Genetic Variation,Histones,Histones: genetics,Histones: metabolism,Likelihood Functions,Models, Genetic,Molecular Sequence Data,Mutation,Phylogeny,Selection, Genetic,Sequence Alignment,Species Specificity},
month = jan,
number = {1},
pages = {31},
pmid = {19193230},
title = {{The evolutionary differentiation of two histone H2A.Z variants in chordates (H2A.Z-1 and H2A.Z-2) is mediated by a stepwise mutation process that affects three amino acid residues.}},
